@model Pessoa
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}
<form asp-action="EntrarUsuario" method="post">
    <fieldset>
        <legend>Login do usuário</legend>
        <div class="col-md-6">
            <div class="form-group">
                <label>Usuário</label>
                <input type="text" class="form-control" asp-for="Nome" />
                <span asp-validation-for="Nome"></span>
            </div>
            <div class="form-group">
                <label>Senha</label>
                <input type="password" class="form-control" asp-for="Senha" />
                <span asp-validation-for="Senha"></span>
            </div>
            <input type="submit" class="form-control" value="Entrar" />
            <a href="Pessoas/CadastrarPessoa">Não possui cadastro ainda?</a>
        </div>
    </fieldset>
    </form>
<form asp-action="LoginPiloto">
    <fieldset>
        <legend>Login do piloto</legend>
        <div class="col-md-6">
            <div class="form-group">
                <label>Piloto</label>
                <input type="text" class="form-control" asp-for="Nome" />
            </div>
            <div class="form-group">
                <label>Senha</label>
                <input type="password" class="form-control" asp-for="Senha" />
            </div>
            <input type="submit" class="form-control" value="Entrar" />
            <a href="Pessoas/CadastroPiloto"> Quer ser piloto mas não possui cadastro ainda?</a>
        </div>
    </fieldset>
</form>


